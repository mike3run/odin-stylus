// BEM Mixins!
e(bEm)
	&__{bEm}
		{block}

m(beM)
	&--{beM}
		{block}

is(toggable)
	&.is-{toggable}
		{block}

// Easy Media Queries
mq(breakpoint)
	size = breakpoints[breakpoint]
	if size != null
		@media (min-width:size)
			{block}
	else
		error("Desafortunadamente tu breakpoint mÃ¡s reciente no existe ðŸ˜© revisa el archivo _breakpoints.styl para saber cuales puedes usar.")


